<%- include('partials/header') -%>

<body>
    <%- include('partials/navbar') -%>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <label> Resposta </label>
            <textarea placeholder="digite sua Resposta" class="form-control" name="corpo"></textarea>
            <input type="hidden" value="<%=pergunta.id%> " type="text" name="pergunta">
            <button type="submit" class="btn btn-primary mt-2">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
        <div class="card mt-4">
            <div class="card-body">
                <p>
                    <%= resposta.corpo %> <br>
                </p>
            </div>
        </div>
        <% }) %>
    </div>

</body>
<%- include('partials/footer') -%>